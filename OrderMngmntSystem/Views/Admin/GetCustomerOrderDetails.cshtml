@model IEnumerable<OrderMngmntSystem.Models.CustomerOrder>

@{
    ViewData["Title"] = "GetCustomerOrderDetails";
}

<div>
    <h2 class="text-primary">All Customers Order Details List</h2>
</div>

<div class="container p-3">
    <div>
        <a class="nav-link text-dark btn-primary font-Italic-bold" style="margin: 12px; background-color: lightgoldenrodyellow;float: right" asp-controller="Admin" asp- asp-action="GetCustomerDetails">Go To Customer Details</a>
    </div>
    @if (Model.Count() > 0)
    {
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    OrderId
                </th>
                <th>
                    customerId
                </th>
                <th>
                    productId
                </th>
                 <th>
                    OrderedDate
                </th>
                @*<th>
                </th>*@

            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model)
            {
            <tr>
                <td>@detail.OrderId</td>
                <td>@detail.customerId</td>
                <td>@detail.productId</td>
                <td>@detail.OrderedDate</td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                   @*    <a asp-controller="Admin" asp-route-prod="@detail.customerId" asp-action="DeleteCategory" class="btn btn-danger mx-1">
                            <i class="fas fa-edit"></i> Delete
                        </a>
                        <a asp-controller="Customer" asp-route-prod="@detail.productId" asp-action="AddProduct" class="btn btn-primary mx-3">
                            <i class="far fa-trash-alt"></i> Add
                        </a>*@
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
    }
</div>

