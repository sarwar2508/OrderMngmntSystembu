@model IEnumerable<OrderMngmntSystem.Models.ProductService>

@{
    ViewData["Title"] = "GetProductDetails";
}

<div>
    <h2 class="text-primary">All Product Details List</h2>
</div>

<div class="container p-3">
    <div>
        <a class="nav-link text-dark btn-primary font-weight-bold" style="margin: 12px; background-color: yellow;float: right" asp-controller="Admin" asp- asp-action="GetProductDetails">All Product Details List</a>
    </div>
    @if (Model.Count() > 0)
    {
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    productId
                </th>
                <th>
                    productName
                </th>
                <th>
                    productCategory
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model)
            {
            <tr>
                <td>@detail.productId</td>
                <td>@detail.productName</td>
                <td>@detail.productCategory</td>

                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Admin" asp-route-Id="@detail.productId" asp-action="GetProductSellingHistory" class="btn btn-primary mx-1">
                            <i class="fas fa-edit"></i> Get
                        </a>
                        <a asp-controller="Admin" asp-route-Id="@detail.productId" asp-action="DeleteCategory" class="btn btn-danger mx-3">
                            <i class="far fa-trash-alt"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
    }
</div>

